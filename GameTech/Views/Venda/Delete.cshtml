@model GameTech.Models.Prod_Venda

@{
    ViewBag.Title = "Deletar Venda";
}


<h2 style="color:white; background-color:black; border-style:solid; width:10%; text-align:center">Deletar</h2>

<h3 style="color:white; background-color:black; border-style:solid; width:35%; margin-left:38%; text-align:center">Deseja excluir o seguinte item</h3>
<div style="color:white; background-color:black; border-style:solid; width:30%; margin-left:40%; text-align:center">
    <h4>Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProdVNome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdVNome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProdVPlat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdVPlat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProdVGen)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdVGen)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProdVPrec)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdVPrec)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover produto" class="btn btn-dark" /> |
            @Html.ActionLink("Cancelar", "VisualizarProdutosVenda", null, new { @class="btn btn-dark"})
        </div>
    }
</div>
