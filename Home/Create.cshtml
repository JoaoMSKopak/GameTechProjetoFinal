@model GameTech.Models.Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1 style="color:white; margin-left:350px; font-size:40px">Cadastro</h1>
    <div class="form-horizontal" style="margin-left:350px; color:white; font-size:20px">

        @*<hr/>*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!--Começo tabela-->
        <table style="border-style:solid; background-color:black; color:white">
            <!--Primeira linha-->
            <tr>
                <!--Primeira coluna-->
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NomeUsu, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </td>
                <!--Segunda coluna-->
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomeUsu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NomeUsu, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <!--Segunda linha-->
            <tr>
                <!--Primeira coluna-->
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </td>
                <!--Segunda coluna-->
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <!--Terceira linha-->
            <tr>
                <!--Primeira coluna-->
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </td>
                <!--Segunda coluna-->
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <!--Quarta linha-->
            <tr>
                <!--Primeira coluna-->
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConSenha, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </td>
                <!--Segunda coluna-->
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ConSenha, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConSenha, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <!--Quinta linha-->
            <tr>
                <!--Primeira coluna-->
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </td>
                <!--Segunda coluna-->
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <!--Sexta linha-->
            <tr>
                <!--Primeira coluna-->
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Tel, htmlAttributes: new { @class = "control-label col-md-2" })

                    </div>
                </td>
                <!--Segunda coluna-->
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control", @id = "telefone" } })
                        @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <!--Setima linha-->
            <tr>
                <!--Primeira coluna-->
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataNasc, htmlAttributes: new { @class = "control-label col-md-2" })

                    </div>
                </td>
                <!--Segunda coluna-->
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataNasc, new { htmlAttributes = new { @class = "form-control", @Value = "2000-01-01" } })
                        @Html.ValidationMessageFor(model => model.DataNasc, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>

        </table>

        @*<div class="form-group">
                @Html.LabelFor(model => model.ReturnUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ReturnUrl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReturnUrl, "", new { @class = "text-danger" })
                </div>
            </div>*@
        <div class="form-group" style="margin-left:150px">
            <div class="col-md-offset-2 col-md-10" style="color:white">
                <input type="submit" value="Confirmar" class="btn btn-dark" />
                @Html.ActionLink("Cancelar","Index", null, new{@class= "btn btn-dark" })
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/inputmask/inputmask.js"></script>

<script>
    $(document).ready(function () {
        $("#telefone").inputmask("mask", { "mask": "(99) 9999-99999" });
    });
</script>
